<view class='text'>
  <text style='margin:10rpx 0rpx 0rpx 20rpx;'>留言区</text>
</view>
<view>
  <textarea placeholder='请留言' style='width:100%;height:600rpx;margin:10rpx 0rpx 0rpx 20rpx;' maxlength='250'></textarea>
</view>

<view class='text'>
  <text style='margin:10rpx 0rpx 0rpx 20rpx;'>手机号</text>
</view>
<view>
  <textarea placeholder='请输入手机号' style='height:80rpx;margin:10rpx 0rpx 0rpx 20rpx;' maxlength='11'></textarea>
</view>

<view class='text'>
  <text style='margin:10rpx 0rpx 0rpx 20rpx;'>您的名字</text>
</view>

<view>
  <textarea placeholder='姓名' style='height:80rpx;margin:10rpx 0rpx 0rpx 20rpx;' maxlength='11'></textarea>
</view>
<view style='height:100rpx;'>
  <radio-group class="radio-group" bindchange="radioChange">
    <label class="radio" wx:for="{{items}}">
      <radio value="{{item.name}}" checked="{{item.checked}}" />{{item.value}}
    </label>
  </radio-group>
</view>

<view style='display: flex;flex-direction:row;'>
  <button type='primary' style='width:90%'>留言</button>

</view>