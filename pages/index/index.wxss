/**index.wxss**/

.swiper {
  width: 100%;
  height: 321rpx;
}

.slide-image {
  width: 100%;
  height: 321rpx;
}

.msg_post {
  background-color: #fff;
  background-size: 80rpx 80rpx;
  background-repeat: no-repeat;
  margin: 40rpx 25rpx 0rpx 70rpx;
  /* 上右下左 */
  border: none;
}

.msg_post::after {
  border: none;
}

.msg_font {
  font-size: 25rpx;
  margin: 0rpx 25rpx 0rpx 60rpx;
  color: #444;
}

.produce {
  height: 250rpx;
  width: 700rpx;
  background-color: #f3f3f3;
  border-radius: 10px;
  margin: 10rpx 0rpx 25rpx 25rpx;
  display: flex;
  flex-direction: row;
}

.title {
  font-weight: 500;
  font-size: 36rpx;
}

.prodece_img {
  height: 200rpx;
  width: 200rpx;
  background-color: #00f3f3;
  margin: 20rpx;

}
